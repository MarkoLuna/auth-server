{
	"info": {
		"_postman_id": "f8603ad7-6a08-49e3-8157-748399c20c39",
		"name": "AuthServer",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "GenerateToken",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = JSON.parse(responseBody);",
							"if (jsonData[\"access_token\"] != null) {",
							"    postman.setEnvironmentVariable(\"access_token\", jsonData[\"access_token\"]);",
							"}",
							"if (jsonData[\"token_type\"] != null) {",
							"    postman.setEnvironmentVariable(\"token_type\", jsonData[\"token_type\"]);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:9096/token?grant_type=client_credentials&client_id={{client_id}}&client_secret={{client_secret}}&scope=all",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "9096",
					"path": [
						"token"
					],
					"query": [
						{
							"key": "grant_type",
							"value": "client_credentials"
						},
						{
							"key": "client_id",
							"value": "{{client_id}}"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}"
						},
						{
							"key": "scope",
							"value": "all"
						}
					]
				}
			},
			"response": []
		},
